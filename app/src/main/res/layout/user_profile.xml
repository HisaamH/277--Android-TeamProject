<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tv_user_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/days_one"
        android:text="@string/profile_msg"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_profile"
        app:srcCompat="@drawable/photo"
        tools:srcCompat="@drawable/photo" />

    <TextView
        android:id="@+id/tv_profile_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/days_one"
        android:text="Name"
        android:textColor="#3F51B5"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/editTextProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#E6E6E6"
        android:ems="10"
        android:fontFamily="@font/days_one"
        android:inputType="textPersonName"
        android:text="@string/profile_name"
        android:textColor="#009688"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_profile_name_text"
        app:layout_constraintStart_toStartOf="@+id/tv_profile_name_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_name_text" />

    <TextView
        android:id="@+id/tv_profile_username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/days_one"
        android:text="Username"
        android:textColor="#3F51B5"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_profile_name_text"
        app:layout_constraintStart_toStartOf="@+id/tv_profile_name_text"
        app:layout_constraintTop_toBottomOf="@+id/editTextProfileName" />

    <TextView
        android:id="@+id/tv_profile_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#E6E6E6"
        android:fontFamily="@font/days_one"
        android:text="@string/profile_username"
        android:textColor="#009688"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_profile_username_text"
        app:layout_constraintStart_toStartOf="@+id/tv_profile_username_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_username_text" />

    <TextView
        android:id="@+id/tv_profile_credentials_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/days_one"
        android:text="Credentials"
        android:textColor="#3F51B5"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_profile_name_text"
        app:layout_constraintStart_toStartOf="@+id/tv_profile_name_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_username" />

    <EditText
        android:id="@+id/editTextProfileCredentials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#E6E6E6"
        android:ems="10"
        android:fontFamily="@font/days_one"
        android:inputType="textPersonName"
        android:text="@string/profile_credentials"
        android:textColor="#009688"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_profile_credentials_text"
        app:layout_constraintStart_toStartOf="@+id/tv_profile_credentials_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_credentials_text" />

    <Button
        android:id="@+id/button_profile_save"
        style="@android:style/Widget.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:enabled="true"
        android:fontFamily="@font/days_one"
        android:text="@string/profile_save_changes"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextProfileCredentials"
        app:layout_constraintStart_toStartOf="@+id/editTextProfileCredentials"
        app:layout_constraintTop_toBottomOf="@+id/editTextProfileCredentials" />

</androidx.constraintlayout.widget.ConstraintLayout>